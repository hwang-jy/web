- var table_form = {id: "번호",subject: "주제",title: "제목",auth: "작성자",created: "작성일",views: "조회",hit: "추천"}
div
    table
        tr 
            th= table_form.subject
        tr.board_top_wrap
            th= table_form.id
            th= table_form.title
            th= table_form.auth
            th= table_form.created
            th= table_form.views
            th= table_form.hit
        each post in board.posts
            tr.board_item 
                td= post.id 
                td 
                    a.hover_under(href="/board/" + post.id)= post.title 
                td= post.name 
                td= post.created 
                td= post.views 
                td= post.hit
        tr 
            td(colspan="6")
                ul.page_button_wrap
                    each page in board.pages
                        li
                            if page == board.page
                                a.btn_page.hover_under.active(href="/board/" + page)= page
                            else
                                a.btn_page.hover_under(href="/board/" + page)= page




